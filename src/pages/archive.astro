  <script>
    function setupArchiveFilters() {
      // (1. æŠ“å–æ‰€æœ‰å…ƒä»¶)
      const searchInput = document.getElementById('search-input') as HTMLInputElement;
      const filterButtons = document.querySelectorAll('.category-filter-btn');
      const articleCards = document.querySelectorAll('.article-card');
      const noResultsMessage = document.getElementById('no-results-message');

      if (!searchInput) return; // å¦‚æœä¸åœ¨é€™å€‹é é¢ï¼Œå°±è·³å‡º

      let currentSearch = '';
      let currentCategory = 'all';

      // --- (2. (æ–°åŠŸèƒ½!) è®€å– URL ä¸Šçš„ 'q' åƒæ•¸ ---
      const urlParams = new URLSearchParams(window.location.search);
      const queryFromUrl = urlParams.get('q'); // 'q' å°æ‡‰æ‚¨ <input name="q">

      if (queryFromUrl) {
        searchInput.value = queryFromUrl; // æŠŠå®ƒå¡«å…¥æœ¬é çš„æœå°‹æ¡†
        currentSearch = queryFromUrl.toLowerCase().trim(); // æ›´æ–°ç¯©é¸è®Šæ•¸
      }
      // --- (æ–°åŠŸèƒ½çµæŸ) ---

      // (3. æ ¸å¿ƒç¯©é¸å‡½å¼)
      function runFilter() {
        let visibleCount = 0;
        
        articleCards.forEach(card => {
          const el = card as HTMLElement; // è½‰å‹ç‚º HTMLElement
          const searchText = el.dataset.searchText || ''; // ä½¿ç”¨ dataset
          const categories = el.dataset.category || ''; // ä½¿ç”¨ dataset

          const matchesSearch = searchText.includes(currentSearch);
          const matchesCategory = currentCategory === 'all' || categories.includes(currentCategory);

          if (matchesSearch && matchesCategory) {
            el.style.display = 'flex';
            visibleCount++;
          } else {
            el.style.display = 'none';
          }
        });

        if (noResultsMessage) { // D æª¢æŸ¥ noResultsMessage æ˜¯å¦å­˜åœ¨
          noResultsMessage.style.display = visibleCount === 0 ? 'block' : 'none';
        }
      }

      // (4. ç¶å®šäº‹ä»¶ç›£è½)
      searchInput.addEventListener('input', (e) => {
        currentSearch = (e.target as HTMLInputElement).value.toLowerCase().trim();
        runFilter();
      });

      filterButtons.forEach(button => {
        button.addEventListener('click', () => {
          filterButtons.forEach(btn => {
            btn.classList.remove('active', 'text-white', 'bg-[var(--accent-color)]');
            btn.classList.add('text-[var(--text-secondary)]', 'bg-gray-100'); 
          });
          
          button.classList.add('active', 'text-white', 'bg-[var(--accent-color)]');
          button.classList.remove('text-[var(--text-secondary)]', 'bg-gray-100'); 
          
          currentCategory = button.getAttribute('data-category-filter') || 'all';
          runFilter();
        });
      });

      // --- (5. (æ–°åŠŸèƒ½!) é é¢è¼‰å…¥æ™‚ï¼Œç«‹å³åŸ·è¡Œä¸€æ¬¡ç¯©é¸) ---
      // é€™æœƒè™•ç†æ‰å¾ URL å¸¶ä¾†çš„é—œéµå­—
      runFilter();
    } // ğŸ‘ˆ æª¢æŸ¥ï¼šsetupArchiveFilters çš„ }

    // ç¢ºä¿åœ¨ Astro é é¢è½‰å ´æ™‚ä¹Ÿèƒ½æ­£ç¢ºåŸ·è¡Œ
    document.addEventListener('astro:page-load', setupArchiveFilters);
    setupArchiveFilters(); // ä¹ŸåŸ·è¡Œä¸€æ¬¡
  </script>
