<script>
  // è®“ <head> ä¸­çš„ ViewTransitions API çŸ¥é“é€™å€‹é é¢æœ‰å‹•æ…‹å…§å®¹
  document.addEventListener('astro:page-load', () => {
    
    const searchInput = document.getElementById('search-input');
