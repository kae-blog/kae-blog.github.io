  document.addEventListener('astro:page-load', () => {
    
    const searchInput = document.getElementById('search-input') as HTMLInputElement;
    const articleListContainer = document.getElementById('article-list-container');
    // æˆ‘å€‘åªæŠ“å–é€™å€‹å®¹å™¨å…§çš„ article-cardï¼Œé¿å…é¸åˆ°å´é‚Šæ¬„çš„
    const articles = articleListContainer?.querySelectorAll('.article-card') || [];
    const noResultsMessage = document.getElementById('no-results-message');
    const categoryButtons = document.querySelectorAll('.category-filter-btn');

    // ----- 
    // é‚è¼¯ï¼šæª¢æŸ¥ç•¶å‰ URLï¼Œè‡ªå‹•é»æ“Šå°æ‡‰çš„åˆ†é¡æŒ‰éˆ•
    // ----- 
    try {
      // 1. å¾ URL ç²å–ç•¶å‰åˆ†é¡åç¨± (ä¾‹å¦‚ /category/æ—¥æœ¬ç•™å­¸ -> æ—¥æœ¬ç•™å­¸)
      // æˆ‘å€‘ç”¨ Astro.params.category çš„å€¼ï¼Œå› ç‚ºå®ƒå·²ç¶“è§£ç¢¼äº†
      const currentCategory = (document.querySelector('h2.text-3xl') as HTMLElement)?.innerText.split('åˆ†é¡ï¼š')[1].split(' (')[0].trim();

      if (currentCategory && currentCategory !== "undefined") {
        // 2. ç§»é™¤ "å…¨éƒ¨" æŒ‰éˆ•çš„ active ç‹€æ…‹
        const allButton = document.querySelector('.category-filter-btn[data-category-filter="all"]');
        allButton?.classList.remove('active', 'text-white', 'bg-[var(--accent-color)]');
        allButton?.classList.add('text-[var(--text-secondary)]', 'bg-gray-100');
        
        // 3. æ‰¾åˆ°å°æ‡‰çš„åˆ†é¡æŒ‰éˆ•ä¸¦è¨­ç‚º active
        const activeButton = document.querySelector(`.category-filter-btn[data-category-filter="${currentCategory}"]`);
        if (activeButton) {
          activeButton.classList.add('active', 'text-white', 'bg-[var(--accent-color)]');
          activeButton.classList.remove('text-[var(--text-secondary)]', 'bg-gray-100');
