        // 3. æ‰¾åˆ°å°æ‡‰çš„åˆ†é¡æŒ‰éˆ•ä¸¦è¨­ç‚º active
        const activeButton = document.querySelector(`.category-filter-btn[data-category-filter="${currentCategory}"]`);
        if (activeButton) {
          activeButton.classList.add('active', 'text-white', 'bg-[var(--accent-color)]');
          activeButton.classList.remove('text-[var(--text-secondary)]', 'bg-gray-100');
        }
