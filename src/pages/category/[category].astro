    function filterArticles() {
      const searchTerm = (searchInput as HTMLInputElement).value.toLowerCase().trim();
      
      // æ‰¾åˆ°ç•¶å‰ "active" çš„åˆ†é¡æŒ‰éˆ•
      const activeCategoryBtn = document.querySelector('.category-filter-btn.active');
      const activeCategory = activeCategoryBtn?.getAttribute('data-category-filter') || 'all';

      let hasVisibleArticles = false;

      if (articleWrappers) {
        articleWrappers.forEach(wrapper => {
          const el = wrapper as HTMLElement;
          const searchText = el.dataset.searchText || '';
          const categories = el.dataset.category || '';
          
          // æ¢ä»¶1: æœå°‹æ–‡å­—
          const matchesSearch = searchTerm === '' || searchText.includes(searchTerm);
          
          // æ¢ä»¶2: åˆ†é¡
          const matchesCategory = activeCategory === 'all' || categories.includes(activeCategory);

          if (matchesSearch && matchesCategory) {
            el.style.display = 'block'; // é¡¯ç¤º
            hasVisibleArticles = true;
          } else {
            el.style.display = 'none'; // éš±è—
          }
        });
      }

      // é¡¯ç¤º/éš±è— "ç„¡çµæœ" è¨Šæ¯
      if (noResultsMessage) {
        noResultsMessage.style.display = hasVisibleArticles ? 'none' : 'block';
      }
    }

    // ----- 
    // ç¶å®šäº‹ä»¶ç›£è½
    // ----- 

    // ç›£è½æœå°‹æ¡†è¼¸å…¥
    searchInput?.addEventListener('input', filterArticles);

    // ç›£è½åˆ†é¡æŒ‰éˆ•é»æ“Š
    categoryButtons.forEach(button => {
