---
// src/pages/index.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import Sidebar from '../components/Sidebar.astro';
import { getCollection } from 'astro:content';

const formatDate = (date: Date) => {
  const d = new Date(date);
  return `${d.getFullYear()}/${String(d.getMonth() + 1).padStart(2, '0')}/${String(d.getDate()).padStart(2, '0')}`;
};

const allPosts = await getCollection('blog');

const featuredPosts = allPosts
  .filter(post => post.data.category?.includes('精選文章'))
  .sort((a, b) => new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime())
  .slice(0, 6);

// 這是你最新的邏輯：最新文章「不排除」精選
const latestPosts = allPosts
  .sort((a, b) => new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime())
  .slice(0, 5);
---

<BaseLayout 
  description="KAE的雜記 - 日本留學與生活。一個紀錄日本交換、旅遊與隨筆的部落格。"
>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-10 lg:gap-12">
        <div class="md:col-span-2 space-y-12">

            <section>
        <h2 class="text-3xl font-bold text-[var(--text-primary)] mb-6 pb-3 border-b border-[var(--border-color)]">最新文章</h2>
        <div class="space-y-4">
          {latestPosts.map(post => (
            <article class="bg-[var(--bg-card)] rounded-xl shadow-md flex p-4 hover:shadow-lg transition-all duration-300">
              <div class="w-24 h-24 flex-shrink-0 overflow-hidden border border-[var(--border-color)] mr-4 rounded-lg">
                <img src={post.data.previewImage} alt={post.data.title} class="w-full h-full object-cover" />
              </div>
              
              <div class="flex-1 flex flex-col">
                <div class="mb-2 flex flex-wrap gap-1 justify-end">
                  {post.data.category.map(cat => (
                    <a href={`/category/${cat}`} class="text-xs font-medium text-white bg-[var(--accent-color)] py-1 px-2 rounded-full hover:bg-[var(--accent-hover)] transition-colors">
                      {cat}
                    </a>
                  ))}
                </div>
                <div class="flex-grow">
                  <h3 class="text-lg font-bold text-[var(--text-primary)] mb-1 line-clamp-2">
                    <a href={`/blog/${post.slug}`} class="hover:text-[var(--accent-color)] transition-colors whitespace-pre-line">
                      {post.data.title}
                    </a>
                  </h3>
                  <p class="text-sm text-[var(--text-secondary)] line-clamp-2 mb-2">{post.data.description}</p>
                </div>
className               <div class="flex flex-wrap items-center justify-between text-xs text-gray-500 gap-x-2 gap-y-1">
                  <span>{formatDate(post.data.publishDate)}</span>
                  <div class="flex flex-wrap gap-1">
                    {post.data.tags?.slice(0,3).map(tag => (
                      <span class="px-2 py-0.5 rounded-md text-gray-700" style="background-color:#e7f0e2;">{tag}</span>
                    ))}
                  </div>
                  <a href={`/blog/${post.slug}`} class="text-[var(--accent-color)] hover:underline ml-auto">閱讀 &rarr;</a>
                </div>
              </div>
            </article>
          ))}
        </div>
        <div class="text-right mt-4">
          <a href="/category/最新文章" class="text-[var(--accent-color)] hover:underline font-semibold">查看所有文章 &rarr;</a>
        </div>
      </section>

            <section>
        <h2 class="text-3xl font-bold text-[var(--text-primary)] mb-6 pb-3 border-b border-[var(--border-color)]">精選文章</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
          {featuredPosts.map(post => (
            <article class="bg-[var(--bg-card)] rounded-xl shadow-md hover:shadow-lg transition-all duration-300 overflow-hidden">
              <div class="w-full aspect-video overflow-hidden">
                <img src={post.data.heroImage || post.data.previewImage} alt={post.data.title} class="w-full h-full object-cover" />
className               </div>
              <div class="p-4">
                <div class="mb-2 flex flex-wrap gap-1">
                  {post.data.category.map(cat => (
                    <a href={`/category/${cat}`} class="text-xs font-medium text-white bg-[var(--accent-color)] py-1 px-2 rounded-full hover:bg-[var(--accent-hover)] transition-colors">
                      {cat}
                    </a>
                  ))}
                </div>
className                 <h3 class="text-lg font-bold text-[var(--text-primary)] mb-2 line-clamp-2">
                  <a href={`/blog/${post.slug}`} class="hover:text-[var(--accent-color)] transition-colors whitespace-pre-line">
                    {post.data.title}
                  </a>
                </h3>
                <p class="text-sm text-[var(--text-secondary)] line-clamp-3 mb-2">{post.data.description}</p>
                <div class="flex flex-wrap items-center justify-between text-xs text-gray-500 gap-2">
                  <span>{formatDate(post.data.publishDate)}</span>
                  <div class="flex flex-wrap gap-1">
                    {post.data.tags?.slice(0,3).map(tag => (
                      <span class="px-2 py-0.5 rounded-md text-gray-700" style="background-color:#e7f0e2;">{tag}</span>
                    ))}
                  </div>
                  <a href={`/blog/${post.slug}`} class="text-[var(--accent-color)] hover:underline ml-auto">閱讀 &rarr;</a>
                </div>
              </div>
            </article>
          ))}
        </div>
        <div class="text-right mt-4">
          <a href="/category/精選文章" class="text-[var(--accent-color)] hover:underline font-semibold">查看更多精選文章 &rarr;</a>
        </div>
      </section>

    </div>

        <Sidebar />
  </div>
</BaseLayout>
